                    <li id="one1" onclick="setTab('one',1)">考核计划公示</li>
                    <li id="one2" onclick="setTab('one',2)">考核结果公示</li>
                </ul>
            </div>
            <div class="menudiv">

                <!--考核计划公示-->
                <div id="con_one_1">
                    <div id="demo" style="overflow:hidden;height:230px;" onmouseover="this.stop()" onmouseout="this.start()">
                        <div id="demo1">

                        </div>
                        <div id=demo2></div>
                    </div>
                    <script type="text/javascript">
                        (function () {
                            var speed = 50;
                            var demo = document.getElementById("demo");
                            var demo2 = document.getElementById("demo2");
                            var demo1 = document.getElementById("demo1");
                            var initScroll = function () {
                                var isScroll;
                                if (demo1.offsetHeight > demo.offsetHeight) {
                                    isScroll = true;
                                } else {
                                    isScroll = false;
                                }
                                if (isScroll === true) {
                                    demo2.style.display = "block";
                                } else {
                                    demo2.style.display = "none";
                                }
                                return isScroll;
                            };
                            demo2.innerHTML = demo1.innerHTML;
                            function Marquee() {
                                if (true !== initScroll()) {
                                    return;
                                }
                                if (demo2.offsetTop - demo.scrollTop <= 0)
                                    demo.scrollTop -= demo1.offsetHeight;
                                else {
                                    demo.scrollTop++;
                                }
                            }
                            var MyMar;
                            var startScroll = function () {
                                MyMar = setInterval(Marquee, speed);
                            };
                            var stopScroll = function () {
                                clearInterval(MyMar);
                            };
                            demo.onmouseover = function () { stopScroll(); }
                            demo.onmouseout = function () { startScroll(); }
                            startScroll();
                        })();
                    </script>
                </div>

                <!--考核结果公示-->
                <div id="con_one_2" style="display:none;">
                    <div id="dome" style="overflow:hidden;height:230px;" onmouseover="this.stop()" onmouseout="this.start()">
