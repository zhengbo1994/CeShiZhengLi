                        </div>
                        <div id=dome2></div>
                    </div>
                    <script type="text/javascript">
                        (function () {
                            var speed = 50;
                            var demo = document.getElementById("dome");
                            var demo2 = document.getElementById("dome2");
                            var demo1 = document.getElementById("dome1");
                            var initScroll = function () {
                                var isScroll;
                                if (demo1.offsetHeight > demo.offsetHeight) {
                                    isScroll = true;
                                } else {
                                    isScroll = false;
                                }
                                if (isScroll === true) {
                                    demo2.style.display = "block";
                                } else {
                                    demo2.style.display = "none";
                                }
                                return isScroll;
                            };
                            demo2.innerHTML = demo1.innerHTML;
                            function Marquee() {
                                if (true !== initScroll()) {
                                    return;
                                }
                                if (demo2.offsetTop - demo.scrollTop <= 0)
                                    demo.scrollTop -= demo1.offsetHeight;
                                else {
                                    demo.scrollTop++;
                                }
                            }
                            var MyMar;
                            var startScroll = function () {
                                MyMar = setInterval(Marquee, speed);
                            };
                            var stopScroll = function () {
                                clearInterval(MyMar);
                            };
                            demo.onmouseover = function () { stopScroll(); }
                            demo.onmouseout = function () { startScroll(); }
                            startScroll();
                        })();
                    </script>
                </div>
            </div>
